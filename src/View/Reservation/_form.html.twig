<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h1>Click on the car that you want to take on your trip!</h1>
<form action ="reservation/show" method="post">
    <div class="centerRes">

        <label for="champ"></label>
        <input type="hidden" id="champ" name="id_van" value="1">
        <label class="col imgCarsInsert" for="van1"><img
                onclick="document.getElementById('champ').value='1';"
                src="/assets/images/beach-two-first-photo.webp" class="car-1" alt=""></label>
        <label class="col imgCarsInsert" for="van2"><img  class="car-2"
                onclick="document.getElementById('champ').value='5';"
                src="/assets/images/coast-two-first-photo.webp" alt=""></label>
        <label class="col imgCarsInsert" for="van3"><img class="car-3"
                onclick="document.getElementById('champ').value='9';"
                src="/assets/images/edition-two-first-photo.webp" alt=""></label>


    </div>
    <div class="formUser">
        <div>
            <div class="dateRev">
                <label for="start">Start</label>
                <input type="date" id="start" value="{{ data[0] }}" name="start">
                <label for="feedback">Feedback</label>
                <input type="date" id="feedback" value="{{ data[1] }}" name="return">
            </div>
            <label for="first_name">First Name</label>
            <input type="text" name="first_name" id="first_name">
        </div>
        <div>
            <label for="last_name">Last Name</label>
            <input type="text" name="last_name" id="last_name">
        </div>
        <div>
            <label for="email">Email</label>
            <input type="text" name="email"  id="email">
        </div>
    </div>
    <button class="reservButtonFirst">Let's go</button>


</form>


<script>$('.car-1').on('click', function(e){
        e.preventDefault();
        $(this).css('border-color', 'green');
    });

    $('.car-2').on('click', function(e){
        e.preventDefault();
        $(this).css('border-color', 'green');
    });

    $('.car-3').on('click', function(e){
        e.preventDefault();
        $(this).css('border-color', 'green');
    });

</script>
