
<section class="container" id="ourVans">
    <article class="row">
    {% for car in cars %}

        <div class="cardCarsHome col-md-4">


        <div class="imgCars">
            <img src="/assets/images/{{ car.first_photo_link }}.webp">
            <a href="/{{ car.type }}"><img src="/assets/images/{{ car.first_photo_link }}.webp"></a>
        </div>

            <a href="/{{ car.type }}"><ul>
            <li>🚐 {{ car.brand }}</li>
            <li>🛠 {{ car.type }}</li>
            <li>🕰 {{ car.year }}</li>

            <li>👩‍👩‍👦‍👦 Up to 5 people!</li> {% if car.type == "beach" %}
            {% else %}
            <li>🚿 outdoor shower</li>
            <li>🚽 toilet</li>
                {% endif %}
</ul></a>

        </div>
{% endfor %}
    </article>
</section>
